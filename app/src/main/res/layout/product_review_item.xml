<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardMaxElevation="4dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/initials_tv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/circle_background"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_margin="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/full_name_tv"
                android:textSize="16sp"
                android:layout_toEndOf="@+id/initials_tv"
                android:layout_marginStart="4dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/created_at_tv"
                android:layout_toEndOf="@+id/full_name_tv"
                android:layout_marginStart="16dp"
                />

            <RatingBar
                android:id="@+id/individual_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/initials_tv"
                android:layout_below="@+id/full_name_tv"
                android:numStars="5"
                android:stepSize="1"
                android:isIndicator="true"
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:layout_marginTop="4dp"
                android:layout_marginStart="20dp"
                android:scaleX="1.2"
                android:scaleY="1.2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edited_tv"
                android:visibility="gone"
                android:layout_toEndOf="@+id/initials_tv"
                android:layout_below="@+id/individual_rating"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/review_tv"
                android:layout_toEndOf="@+id/edited_tv"
                android:layout_below="@+id/individual_rating"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>